.tui-countdown-box {
  display: flex;
  align-items: center;
}

.tui-countdown-item {
  border: 1rpx solid;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 2rpx 1rpx;
  border-radius: 6rpx;
  overflow: hidden;
}

.tui-countdown-colon {
  display: flex;
  justify-content: center;
  padding: 0 5rpx;
}

.tui-countdown-scale {
  transform: scale(0.8);
  transform-origin: center center;
}
