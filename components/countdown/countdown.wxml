    <view class="{{scale?'tui-countdown-scale':''}}" style="font-size:{{size}}rpx;color:{{color}};line-height:{{size}}rpx">{{h}}</view>
  </view>
  <view class="tui-countdown-colon" style="line-height:{{colonsize}}rpx;font-size:{{colonsize}}rpx;color:{{coloncolor}}" wx:if="{{hours}}">:</view>
