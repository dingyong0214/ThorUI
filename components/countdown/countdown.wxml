    <view class="{{scale?'tui-countdown-scale':''}}" style="font-size:{{size}}rpx;color:{{color}};line-height:{{size}}rpx">{{i}}</view>
  </view>
  <view class="tui-countdown-colon" style="line-height:{{colonsize}}rpx;font-size:{{colonsize}}rpx;color:{{coloncolor}}">:</view>
